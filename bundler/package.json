{
  "name": "liferay-npm-bundler-improved",
  "description": "A highly experimental and non-official module which bundles the javascript into the liferay loader and creates a jar file.",
  "version": "1.0.4",
  "author": "Jonas Wanner",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jwanner83/liferay-npm-bundler-improved"
  },
  "bugs": {
    "url": "https://github.com/jwanner83/liferay-npm-bundler-improved/issues"
  },
  "keywords": [
    "liferay",
    "liferay-npm-bundler",
    "npm-bundler",
    "liferay-frontend"
  ],
  "files": [
    "/bin",
    "/dist"
  ],
  "bin": {
    "liferay-npm-bundler-improved": "bin/bundler.js"
  },
  "dependencies": {
    "@types/archiver": "^5.1.1",
    "archiver": "^5.3.0",
    "arg": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-eslint": "^8.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "4.0.0",
    "chalk": "^4.1.2",
    "esbuild": "^0.12.28",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "prettier": "^2.4.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "readline": "^1.3.0",
    "regenerator-runtime": "^0.13.9",
    "rollup": "^2.60.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-esbuild": "^4.5.0",
    "rollup-plugin-preserve-shebangs": "^0.2.0",
    "typescript": "4.4.4"
  },
  "scripts": {
    "build": "rollup -c --configPlugin rollup-plugin-esbuild",
    "watch": "rollup -c -w --configPlugin rollup-plugin-esbuild",
    "format": "prettier -w .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  }
}
